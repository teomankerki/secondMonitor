{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch MegaApp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/MegaApp.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/MegaApp/Views"
            }
        }
    ]
}
