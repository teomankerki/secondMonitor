<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <DefaultItemExcludes>$(DefaultItemExcludes);src\MegaApp\bin\**;src\MegaApp\obj\**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <Page Remove="src\MegaApp\App.xaml" />
    <ApplicationDefinition Include="src\MegaApp\App.xaml" />
  </ItemGroup>
</Project>
