<UserControl x:Class="MegaApp.Modules.MinesweeperModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="320" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="Minesweeper" Style="{StaticResource ModuleTitle}" />
            <TextBlock Text="{Binding StatusMessage}" Foreground="#AAFFFFFF" FontSize="12" Margin="0 2 0 8" />

            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6" Rows="6" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.RevealCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="2"
                                Padding="0"
                                Height="36"
                                Width="36">
                            <Button.InputBindings>
                                <MouseBinding MouseAction="RightClick"
                                              Command="{Binding DataContext.ToggleFlagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}" />
                            </Button.InputBindings>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#22333333" />
                                    <Setter Property="BorderBrush" Value="#44FFFFFF" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRevealed}" Value="True">
                                            <Setter Property="Background" Value="#22FFFFFF" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsExploded}" Value="True">
                                            <Setter Property="Background" Value="#55FF6B6B" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowFlag}" Value="True">
                                            <Setter Property="Background" Value="#3387A8FF" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Grid>
                                <TextBlock Text="{Binding DisplayValue}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="#F7FBFF" />
                                <TextBlock Text="F"
                                           Foreground="#F7FBFF"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding ShowFlag, Converter={StaticResource BoolToVisibility}}" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="Flags left:" Foreground="#AAFFFFFF" Margin="0 0 8 0" />
                <TextBlock Text="{Binding FlagsRemaining}" FontWeight="SemiBold" Foreground="#F7FBFF" />
                <StackPanel Orientation="Horizontal" Margin="24 0 0 0">
                    <Button Content="Reset"
                            Command="{Binding ResetCommand}"
                            Margin="0 0 8 0" />
                    <Button Content="Restart"
                            Command="{Binding RestartCommand}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
