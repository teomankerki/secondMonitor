<UserControl x:Class="MegaApp.Modules.PomodoroModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="240" d:DesignWidth="260">
    <Border Style="{StaticResource ModuleCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="Pomodoro" Style="{StaticResource ModuleTitle}" />
                <TextBlock Text="{Binding CurrentPhase}" Foreground="#AAFFFFFF" />
                <TextBlock Text="{Binding DisplayTime}" FontSize="36" FontWeight="SemiBold" Foreground="#F0F4FF" Margin="0 10 0 20" />
                <ProgressBar Height="8" Value="{Binding Progress}" Maximum="1" Background="#22FFFFFF" Foreground="#FF7FD1AE" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 16 0 0">
                <Button Content="Start/Pause" Click="OnToggle" Margin="0 0 8 0" Padding="8" />
                <Button Content="Reset" Click="OnReset" Padding="8" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
