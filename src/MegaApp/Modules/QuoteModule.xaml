<UserControl x:Class="MegaApp.Modules.QuoteModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="260">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="Affirmations" Style="{StaticResource ModuleTitle}" />
            <TextBlock TextWrapping="Wrap" Text="{Binding CurrentQuote}" Foreground="#F5F7FF" FontSize="16" />
        </StackPanel>
    </Border>
</UserControl>
