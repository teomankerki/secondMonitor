<UserControl x:Class="MegaApp.Modules.Game2048Module"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="320" d:DesignWidth="300">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="2048" Style="{StaticResource ModuleTitle}" />
            <TextBlock Text="{Binding StatusMessage}" Foreground="#AAFFFFFF" FontSize="12" Margin="0 2 0 8" />

            <ItemsControl ItemsSource="{Binding Tiles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="3" CornerRadius="6">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#22333333" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasValue}" Value="True">
                                            <Setter Property="Background" Value="#FF7FD1AE" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding DisplayValue}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#F7FBFF" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0 12 0 0" HorizontalAlignment="Center">
                <TextBlock Text="Score:" Foreground="#AAFFFFFF" Margin="0 0 4 0" />
                <TextBlock Text="{Binding Score}" FontWeight="SemiBold" Foreground="#F7FBFF" />
            </StackPanel>

            <Grid Margin="0 12 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Content="Reset"
                        Command="{Binding ResetCommand}"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="4" />
                <Button Content="↑"
                        Command="{Binding MoveUpCommand}"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="4" />
                <Button Content="→"
                        Command="{Binding MoveRightCommand}"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="4" />
                <Button Content="←"
                        Command="{Binding MoveLeftCommand}"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="4" />
                <Button Content="↓"
                        Command="{Binding MoveDownCommand}"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="4" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
