<UserControl x:Class="MegaApp.Modules.SudokuModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="280" d:DesignWidth="260">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="Mini Sudoku" Style="{StaticResource ModuleTitle}" />
            <TextBlock Text="{Binding StatusMessage}" Foreground="#AAFFFFFF" FontSize="12" Margin="0 4 0 12" />

            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="4" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.CycleCellCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="2"
                                Padding="4"
                                FontSize="18"
                                FontWeight="SemiBold">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#22FFFFFF" />
                                    <Setter Property="Foreground" Value="#F7FBFF" />
                                    <Setter Property="BorderBrush" Value="#11FFFFFF" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFixed}" Value="True">
                                            <Setter Property="Background" Value="#333764BC" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsError}" Value="True">
                                            <Setter Property="Background" Value="#44FF6B6B" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="{Binding DisplayValue}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0 12 0 0">
                <Button Content="Reset" Command="{Binding ResetCommand}" />
                <Button Content="Restart" Command="{Binding RestartCommand}" Margin="8 0 0 0" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
