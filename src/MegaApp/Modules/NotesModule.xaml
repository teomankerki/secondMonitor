<UserControl x:Class="MegaApp.Modules.NotesModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="260" d:DesignWidth="300">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="Quick Notes" Style="{StaticResource ModuleTitle}" />
            <TextBox Text="{Binding Draft, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     Height="70"
                     Margin="0 8 0 0"
                     TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" Margin="0 8 0 8">
                <Button Content="Add" Command="{Binding AddNoteCommand}" />
                <Button Content="Clear All" Command="{Binding ClearNotesCommand}" Margin="8 0 0 0" />
            </StackPanel>

            <ScrollViewer Height="140" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Notes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0 4 0 0" Padding="8" Background="#11FFFFFF" CornerRadius="6">
                                <DockPanel>
                                    <Button Content="X"
                                            Width="24"
                                            Height="24"
                                            DockPanel.Dock="Right"
                                            Command="{Binding DataContext.DeleteNoteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Foreground="#F7FBFF" Margin="4 0 0 0" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
