<UserControl x:Class="MegaApp.Modules.EndlessRunnerModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="280" d:DesignWidth="340">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="Endless Runner" Style="{StaticResource ModuleTitle}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 0 0 8">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#AAFFFFFF" />
                <TextBlock Text="{Binding Score, StringFormat=Score: {0}}"
                           Foreground="#F0F4FF"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"
                           Margin="12 0 0 0" />
            </StackPanel>
            <Border Background="#111C2E" CornerRadius="10" Padding="8">
                <ItemsControl ItemsSource="{Binding Tiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="24"
                                    Height="48"
                                    Margin="2"
                                    CornerRadius="6"
                                    BorderBrush="#223C58"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#15263C" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasObstacle}" Value="True">
                                                <Setter Property="Background" Value="#334AD6B2" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasPlayer}" Value="True">
                                                <Setter Property="Background" Value="#4473A9FF" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Viewbox>
                                    <TextBlock Text="{Binding DisplayGlyph}"
                                               Foreground="#F7FBFF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold" />
                                </Viewbox>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            <StackPanel Orientation="Horizontal" Margin="0 12 0 0" HorizontalAlignment="Right">
                <Button Content="Jump" Command="{Binding JumpCommand}" Margin="0 0 8 0" />
                <Button Content="Reset" Command="{Binding ResetCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
