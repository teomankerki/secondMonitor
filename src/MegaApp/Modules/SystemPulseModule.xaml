<UserControl x:Class="MegaApp.Modules.SystemPulseModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="260">
    <Border Style="{StaticResource ModuleCard}">
        <StackPanel>
            <TextBlock Text="System Pulse" Style="{StaticResource ModuleTitle}" />
            <TextBlock Text="{Binding Now, StringFormat=dddd}" Foreground="#AAFFFFFF" />
            <TextBlock Text="{Binding Now, StringFormat=HH:mm:ss}" FontSize="30" FontWeight="SemiBold" Foreground="#F0F4FF" />
            <TextBlock Text="{Binding MemoryMegabytes, StringFormat=App memory {0} MB}" Foreground="#CCFFFFFF" />
        </StackPanel>
    </Border>
</UserControl>
