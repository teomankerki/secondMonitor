<Window x:Class="MegaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:modules="clr-namespace:MegaApp.Modules"
        mc:Ignorable="d"
        Title="Mega App" Width="1200" Height="800"
        Background="{StaticResource AppBackgroundBrush}" WindowStyle="None" AllowsTransparency="False">
    <Window.Effect>
        <DropShadowEffect Color="#CC000000" BlurRadius="16" Direction="270" ShadowDepth="4" />
    </Window.Effect>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0 0 0 18">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="Mega App" FontSize="32" FontWeight="SemiBold" Foreground="#F7FBFF" />
                <TextBlock Text=" — second monitor sanctuary" FontSize="16" Foreground="#99FFFFFF" Margin="12 8 0 0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="×" Width="32" Height="32" Background="#11FFFFFF" BorderBrush="Transparent" Foreground="White" Click="OnClose" />
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <modules:PomodoroModule Width="320" Height="240" />
                <modules:IdleGardenModule Width="320" Height="220" />
                <modules:QuoteModule Width="320" Height="180" />
                <modules:CalmBreathingModule Width="320" Height="260" />
                <modules:SystemPulseModule Width="320" Height="200" />
                <modules:ParticleFlowModule Width="320" Height="260" />
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
