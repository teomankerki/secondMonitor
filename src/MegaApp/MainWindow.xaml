<Window x:Class="MegaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MegaApp.ViewModels"
        mc:Ignorable="d"
        Title="Mega App"
        Width="1200"
        Height="800"
        Background="{StaticResource AppBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize">
    <Window.DataContext>
        <viewModels:DashboardViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#F7FBFF" />
            <Setter Property="Background" Value="#3A68F5" />
            <Setter Property="Padding" Value="14 6" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              SnapsToDevicePixels="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#F7FBFF" />
            <Setter Property="Background" Value="#113049" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Margin" Value="6 0 0 0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Effect>
        <DropShadowEffect Color="#CC000000" BlurRadius="16" Direction="270" ShadowDepth="4" />
    </Window.Effect>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0 0 0 18" MouseLeftButtonDown="OnDragWindow">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <TextBlock Text="Mega App" FontSize="32" FontWeight="SemiBold" Foreground="#F7FBFF" />
                <TextBlock Text=" - second monitor sanctuary" FontSize="16" Foreground="#99FFFFFF" Margin="12 8 0 0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="_" Style="{StaticResource IconButtonStyle}" Click="OnMinimize" />
                <Button Content="[]" Style="{StaticResource IconButtonStyle}" Click="OnToggleMaximize" />
                <Button Content="X" Style="{StaticResource IconButtonStyle}" Background="#33FF6B6B" Click="OnClose" />
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="#11192A" CornerRadius="16" Padding="16" Margin="0 0 0 16">
                    <StackPanel>
                        <TextBlock Text="Create your dashboard" FontSize="20" FontWeight="SemiBold" Foreground="#F7FBFF" />
                        <TextBlock Text="Select a category preset and drop in any widgets you want. Drag cards around to customize the layout."
                                   Foreground="#99FFFFFF"
                                   Margin="0 4 0 12" />
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="260"
                                      ItemsSource="{Binding AvailableCategoryTemplates}"
                                      DisplayMemberPath="DisplayName"
                                      SelectedValuePath="Key"
                                      SelectedValue="{Binding SelectedCategoryKey}"
                                      Margin="0 0 12 0"
                                      HorizontalAlignment="Left" />
                            <Button Content="Add Category"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding AddCategoryCommand}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBlock Text="No categories yet. Use the button above to add your first section."
                           Foreground="#77FFFFFF"
                           FontStyle="Italic"
                           Margin="0 12 0 24">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Categories.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <ItemsControl ItemsSource="{Binding Categories}" AllowDrop="True" Drop="OnCategoryPanelDrop" DragOver="OnCategoryDragOver">
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="0 0 0 18" />
                            <Setter Property="AllowDrop" Value="True" />
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="OnCategoryMouseDown" />
                            <EventSetter Event="PreviewMouseMove" Handler="OnCategoryMouseMove" />
                            <EventSetter Event="Drop" Handler="OnCategoryDrop" />
                            <EventSetter Event="DragOver" Handler="OnCategoryDragOver" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:CategoryViewModel}">
                            <Border Background="#0D1626" CornerRadius="18" Padding="16">
                                <StackPanel>
                                    <DockPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F7FBFF"
                                                   VerticalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                            <Button Content="X"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Width="28"
                                                    Height="28"
                                                    Command="{Binding DataContext.RemoveCategoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </DockPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 16 0 0">
                                        <ComboBox Width="260"
                                                  ItemsSource="{Binding DataContext.AvailableWidgets, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  DisplayMemberPath="DisplayName"
                                                  SelectedValuePath="Key"
                                                  SelectedValue="{Binding SelectedWidgetKey, Mode=TwoWay}" />
                                        <Button Content="Add Widget"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Margin="12 0 0 0"
                                                Command="{Binding AddWidgetCommand}" />
                                    </StackPanel>

                                    <ItemsControl ItemsSource="{Binding Widgets}"
                                                  AllowDrop="True"
                                                  Drop="OnWidgetPanelDrop"
                                                  DragOver="OnWidgetDragOver">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="AllowDrop" Value="True" />
                                                <Setter Property="Margin" Value="0" />
                                                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="OnWidgetMouseDown" />
                                                <EventSetter Event="PreviewMouseMove" Handler="OnWidgetMouseMove" />
                                                <EventSetter Event="Drop" Handler="OnWidgetDrop" />
                                                <EventSetter Event="DragOver" Handler="OnWidgetDragOver" />
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type viewModels:WidgetViewModel}">
                                                <Border Background="#111C2E" CornerRadius="14" Padding="12" Margin="0 12 12 0">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition />
                                                        </Grid.RowDefinitions>
                                                        <DockPanel Grid.Row="0" Margin="0 0 0 8">
                                                            <TextBlock Text="{Binding DisplayName}"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#F7FBFF" />
                                                            <Button Content="X"
                                                                    Style="{StaticResource IconButtonStyle}"
                                                                    Width="26"
                                                                    Height="26"
                                                                    DockPanel.Dock="Right"
                                                                    Command="{Binding DataContext.RemoveWidgetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                    CommandParameter="{Binding}" />
                                                        </DockPanel>
                                                        <ContentControl Grid.Row="1"
                                                                        Content="{Binding Control}"
                                                                        Width="{Binding Width}"
                                                                        Height="{Binding Height}"
                                                                        HorizontalAlignment="Left" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
